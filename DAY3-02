# Install the arules package if not already installed
if (!require("arules")) install.packages("arules")
library(arules)

# Sample Data (Replace with your actual data)
transactions <- TxList(
  c("Milk", "Beer", "Diapers"),
  c("Bread", "Butter", "Milk"),
  c("Milk", "Diapers", "Cookies"),
  c("Bread", "Butter", "Cookies"),
  c("Beer", "Cookies", "Diapers"),
  c("Bread", "Butter", "Diapers"),
  c("Milk", "Diapers", "Bread", "Butter"),
  c("Beer", "Diapers"),
  c("Milk", "Diapers", "Bread", "Butter"),
  c("Beer", "Cookies")
)

# (a) Maximum Number of Association Rules (including zero support)
# Calculate the power set size (2 ^ number of items)
total_items <- length(unique(unlist(transactions)))
max_rules <- 2^total_items
cat("Maximum number of association rules (including zero support):", max_rules, "\n")

# (b) Maximum Frequent Itemset Size (minsup > 0)
# Minimum support threshold (example value)
min_sup <- 3

# Check if any itemset can have minimum support with 10 transactions
min_transactions_for_freq <- ceiling(total_items / min_sup)

if (min_transactions_for_freq <= nrow(transactions)) {
  # At least size-2 itemsets can be frequent
  max_freq_itemset_size <- total_items
  cat("Maximum size of frequent itemsets (minsup > 0):", max_freq_itemset_size, "\n")
} else {
  # No itemsets larger than size-1 can be frequent with this minimum support and data size
  max_freq_itemset_size <- 1
  cat("No frequent itemsets larger than size-1 possible with minsup =", min_sup, "\n")
}
